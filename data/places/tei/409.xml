                    <placeName xml:id="name409-4" xml:lang="ar" srophe:tags="#headword"
                        source="#bib409-2 #bib409-8">سجستان</placeName>
                    <placeName xml:id="name409-5" xml:lang="en" source="#bib409-3"
                        >Sijistan</placeName>
                    <placeName xml:id="name409-6" xml:lang="en" source="#bib409-4"
                        >Segestan</placeName>
                    <placeName xml:id="name409-7" xml:lang="en" source="#bib409-5"
                        >Segestān</placeName>
                    <placeName xml:id="name409-8" xml:lang="ar" source="#bib409-7"
                        >سِجِستان</placeName>
                    <placeName xml:lang="en" xml:id="name409-9">Sīstān</placeName>
                    <placeName xml:lang="ar" xml:id="name409-10">سيستان</placeName>
                    <desc type="abstract" xml:lang="en">“[A] region of eastern Persia lying to the
                        south of <placeName>K̲h̲urāsān</placeName> and to the north of
                            <placeName>Balūčistān</placeName>, now administratively divided between
                        <placeName>Persia</placeName> and <placeName>Afghanistan</placeName>.”
                        (Bosworth)</desc>
                    <desc xml:lang="en"><quote source="#bib409-6">A region located around
                                <placeName>Lake Hāmūn</placeName> and the <placeName>Helmand
                                river</placeName> in modern
                        <placeName>Sīstān</placeName>.</quote></desc>
                    <desc xml:lang="syr-Syrj">
                        <quote source="#bib409-1">ܦܢܝܬܳܐ ܗܝ ܪܰܒܬܳܐ ܘܰܩܠܝܡܳܐ ܗܘ ܦܰܬܝܳܐ ܒܩܘܪܳܒܐ ܕܗܰܪܐܬ
                            ܪܰܚܝܩܳܐ 10 ܝܰܘܡ̈ܝܢ </quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib409-2">ناحية كبيرة وولاية واسعة جنوب هرات وبينهما عشرة
                            ايام.</quote>
                    </desc>
                    <desc xml:lang="en">
                        <quote source="#bib409-3">a vast territory, ten days’ journey south of
                                <placeName ref="http://syriaca.org/place/523"
                            >Herat</placeName>.</quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib409-10">الحيرة مدينة كانت بالكوفة وقرية بفارس ومنزل
                            بسجستان ومحلة بنيسابور</quote>
                    </desc>
                    <location type="gps" source="#bib409-6">
                        <geo>32.5 62.5</geo>
                    </location>
                    <event type="attestation" xml:id="attestation409-1" notBefore="1224"
                        notAfter="1228" syriaca-computed-start="1224-01-01"
                        syriaca-computed-end="1228-01-01" source="#bib409-7">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar"
                                >سِجِستان</foreign> in the <title xml:lang="en" level="m">Muʿjam
                                al-buldān</title> of <persName>Yāqūt al-Ḥamawī</persName>.</p>
                        <link target="#name409-8 #attestation409-1"/>
                    </event>
                    <event type="attestation" xml:id="attestation409-2" when="0891"
                        source="#bib409-8">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar">سجستان</foreign>
                            in the <title xml:lang="en" level="m">Kitāb al-buldān</title> of
                                <persName>Aḥmad ibn Abī Yaʿqūb al-Yaʿqūbī</persName>.</p>
                        <link target="#name409-4 #attestation409-2"/>
                    </event>
                    <state type="existence"/>
                    <note type="corrigenda">In Dolabani's translation of Barsoum's description
                            <quote xml:lang="syr-Syrj">ܒܩܘܪܳܒܐ</quote> should read <quote
                            xml:lang="syr-Syrj">ܒܩܘܪܒܳܐ</quote>.</note>
                    <idno type="URI">http://bqgazetteer.bethmardutho.org/place/409</idno>
