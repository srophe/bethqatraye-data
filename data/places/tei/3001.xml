      <listPlace>
        <place xml:id="place-3001" type="settlement">
          <placeName xml:id="name3001-1" xml:lang="en" srophe:tags="#headword">Sarkhas</placeName>
          <placeName xml:id="name3001-2" xml:lang="ar" srophe:tags="#headword" source="#bib3001-1 #bib3001-2 #bib3001-3">سرخس</placeName>
          <placeName xml:lang="en" xml:id="name3001-3">Sarakhs</placeName>
          <desc type="abstract" xml:lang="en" xml:id="abstract3001-1">A city of <ref rend="bold" target="https://bqgazetteer.bethmardutho.org/place/603"> <placeName ref="http://syriaca.org/place/603">Khurasan</placeName> </ref> between <ref rend="bold" target="https://bqgazetteer.bethmardutho.org/place/2997"> <placeName ref="http://syriaca.org/place/2997">Naysābūr</placeName> </ref> and <ref rend="bold" target="https://bqgazetteer.bethmardutho.org/place/607"> <placeName ref="http://syriaca.org/place/607">Merv</placeName> </ref>
          </desc>
          <desc xml:lang="ar">
            <quote source="#bib3001-2">ورأيت شيخا بسرخس قد فصل الاشكال وصور بلد الكفر والاسلام كله
              خطأ الا القليل وقلت له هل سافرت قال ما جاوزت سرخس</quote>
          </desc><desc xml:lang="ar"><quote source="#bib3001-5">ثم غزاهم طغيتمور بنفسه في خمسين ألفاً من التجر فهزموه، وملكوا البلاد، وتغلبوا على سرخس والزاوة وطوس، وهي من أعظم بلاد خراسان.</quote></desc><desc xml:lang="ar"><quote source="#bib3001-6">ثم سافرنا الى مدينة سرخس، وإليها ينسب الشيخ الصالح لقمان السرخسي رضي الله عنه.</quote></desc>
                    <location type="gps" source="#bib3001-4">
                        <geo>36.5449 61.1577</geo>
                    </location>
          <event type="attestation" xml:id="attestation3001-1" when="0891" source="#bib3001-1">
            <p xml:lang="en">Attestation of name <foreign xml:lang="ar">سرخس</foreign> in the <title xml:lang="en" level="m">Kitāb al-buldān</title> of <persName>Aḥmad ibn Abī Yaʿqūb
                al-Yaʿqūbī</persName>.</p>
            <link target="#name3001-2 #attestation3001-1"/>
          </event>
          <state type="existence" from="0891" to="1220">
            <precision match="@from" notAfter="0891"/>
            <precision match="@to" notBefore="1220"/>
          </state>
