         <listPlace>
            <place xml:id="place-3020" type="fortification">
               <placeName xml:id="name3020-1" xml:lang="en" srophe:tags="#headword"
                  >al-Mushaqqar</placeName>
               <placeName xml:id="name3020-2" xml:lang="ar" srophe:tags="#headword"
                  source="#bib3020-1 #bib3020-2">المشقر</placeName>
               <placeName xml:lang="ar" xml:id="name3020-3">المُشَقَّرُ</placeName>
               <desc type="abstract" xml:lang="en" xml:id="abstract3020-1">A fortress near <placeName
                     ref="http://syriaca.org/place/2903">Hagar</placeName> in <placeName
                     ref="http://syriaca.org/place/2941">al-Baḥrayn</placeName>
               </desc>
               <desc xml:lang="ar">
                  <quote source="#bib3020-3">قال ابن الفقيه : هو حصن بين نجران والبحرين يقال إنه من
                     بناء طسم وهو على تل عال ويقابله حصن بني سدوس ويقال إنه من بناء سليمان بن دواد،
                     عليهم السلام، وقال غيره : المشقر حصن بالبحرين عظيم لعبد القيس يلي حصنا لهم آخر
                     يقال له الصفا قبل مدينة هجر والمسجد الجامع بالمشقر، وبين الصفا والمشقر نهر يجري
                     يقال له العين وهو يجري إلى جانب مدينة محمد بن الغمر، ولذلك قال يزيد بن المفرغ
                     يهجو المنذر بن الجارود وكان قد أجاره فحقد عبيد الله بن زياد جواره وأخذه منه
                     فنكل به ونسب المشقر إلى عبد القيس وهم أهل البحرين</quote>
               </desc>
               <event type="attestation" xml:id="attestation3020-1" notBefore="0846" notAfter="0885"
                  source="#bib3020-1">
                  <p xml:lang="en">Attestation of name <foreign xml:lang="ar">المشقر</foreign> in
                     the <title xml:lang="en" level="m">Kitāb al-masālik wa-l-mamālik</title> of
                        <persName>Abuʾl-Qāsim Ibn Khurradādhbih</persName>.</p>
                  <link target="#name3020-2 #attestation3020-1"/>
               </event>
               <event type="attestation" xml:id="attestation3020-2" notBefore="0902" notAfter="0908"
                  source="#bib3020-2">
                  <p xml:lang="en">Attestation of name <foreign xml:lang="ar">المشقر</foreign> in
                     the <title xml:lang="en" level="m">Kitāb al-buldān</title> of <persName>Aḥmad
                        b. Muḥammad al-Hamadhānī Ibn al-Faqīh</persName>.</p>
                  <link target="#name3020-2 #attestation3020-2"/>
               </event>
               <state type="existence" from="0908" to="0902">
