                    <placeName xml:id="name178-5" xml:lang="ar" source="#bib178-5"
                        >سُمَيْساط</placeName>
                    <placeName xml:lang="en" resp="http://bqgazetteer.bethmardutho.org"
                        xml:id="name178-6">Samīsāṭ</placeName>
                    <placeName xml:lang="en" xml:id="name178-7">Samīsaṭ</placeName>
                    <placeName xml:lang="ar" xml:id="name178-8">سميسط</placeName>
                    <desc type="abstract" xml:lang="en" xml:id="abstract178-1">A town on the <placeName
                            ref="http://syriaca.org/place/82">Euphrates</placeName> northwest of
                            <placeName ref="http://syriaca.org/place/78">Edessa</placeName>.</desc>
                    <desc xml:lang="syr-Syrj">
                        <quote source="#bib178-2">ܐܰܬܪܐ ܗܘ ܕܰܠܡܰܥܪܒܗ ܕܰܦܪܳܬ ܘܰܠܓܰܪܒܝܗ
                            ܕܐܘܪܗܳܝ.</quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib178-3">بلدة على غربي الفرات شمالي الرها.</quote>
                    </desc>
                    <desc xml:lang="en">
                        <quote source="#bib178-4">a town on the Euphrates, north of Edessa.</quote>
                    </desc>
                    <desc xml:lang="ar">
                        <quote source="#bib178-6">واما حدودها ومسافاتها فمن مخرج الفرات في حد ملطية
                            الى سميساط يومان ومن سميساط الى جسر منبج ايام</quote>
                    </desc>
                    <location type="gps" source="#bib178-1">
                        <geo>37.56452 38.47134</geo>
                    </location>
                    <event type="attestation" xml:id="attestation178-1" notBefore="1224"
                        notAfter="1228" syriaca-computed-start="1224-01-01"
                        syriaca-computed-end="1228-01-01" source="#bib178-5">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar"
                                >سُمَيْساط</foreign> in the <title xml:lang="en" level="m">Muʿjam
                                al-buldān</title> of <persName>Yāqūt al-Ḥamawī</persName>.</p>
                        <link target="#name178-5 #attestation178-1"/>
                    </event>
                    <state type="existence" from="0750" to="2013" syriaca-computed-end="2013-01-01"
                        syriaca-computed-start="0750-01-01">
