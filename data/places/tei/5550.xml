          <placeName xml:id="name5550-1" xml:lang="en" srophe:tags="#headword" resp="https://bqgazetteer.bethmardutho.org">ʿAsfān</placeName>
          <placeName xml:id="name5550-2" xml:lang="ar" srophe:tags="#headword" source="#bib5550-1">عسفان</placeName>
