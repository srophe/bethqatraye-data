         <listPlace>
            <place xml:id="place-2970" type="settlement">
               <placeName xml:id="name2970-1" xml:lang="en" srophe:tags="#headword"
                  >al-Ray</placeName>
               <placeName xml:id="name2970-2" xml:lang="ar" srophe:tags="#headword"
