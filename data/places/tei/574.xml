            <listPlace>
                <place xml:id="place-574" type="settlement">
                    <placeName xml:id="name574-1" xml:lang="en" syriaca-tags="#syriaca-headword"
                        source="#bib574-1">Anasartha</placeName>
                    <placeName xml:id="name574-2" xml:lang="ar" source="#bib574-3" syriaca-tags="#syriaca-headword"
                        >خناصرة</placeName>
                    <placeName xml:lang="en" resp="http://bqgazetteer.bethmardutho.org"
                        xml:id="name574-3">al-Khunāṣira</placeName>
                    <placeName xml:lang="ar" source="#bib574-4"
                        xml:id="name574-4">الخناصرة</placeName>
                    <desc type="abstract" xml:lang="en" xml:id="abstract574-1">“[A]n ancient
                        fortified settlement situated some 60 km. to the south-east of <placeName>Aleppo</placeName> and
                        100 km. to the north-east of <placeName>Ḥamāt</placeName>, on a route through the desert—on the
                        fringes of which it lies—connecting <placeName>Aleppo</placeName> with <placeName>Bag̲h̲dād</placeName>.” (C.E.
                        Bosworth)</desc>
                    <desc xml:lang="en">A Roman village southeast of
                            <placeName ref="http://syriaca.org/place/18">Aleppo</placeName>.</desc>
                    <desc xml:lang="ar">
                        <quote source="#bib574-4">ثم الخناصرة وبالس وهما من عمل قنسرين</quote>
                    </desc>
                    <location type="gps" source="#bib574-2">
                        <geo>35.809864 37.518964</geo>
                    </location>
                    <event type="attestation" xml:id="attestation574-1" notBefore="1224"
                        notAfter="1228" syriaca-computed-start="1224-01-01"
                        syriaca-computed-end="1228-01-01" source="#bib574-3">
                        <p xml:lang="en">Attestation of name <foreign xml:lang="ar">خناصرة</foreign>
                            in the <title xml:lang="en" level="m">Muʿjam al-buldān</title> of
                                <persName>Yāqūt al-Ḥamawī</persName>.</p>
                        <link target="#name574-2 #attestation574-1"/>
                    </event>
                    <state type="existence" from="0426" to="2013" syriaca-computed-end="2013-01-01"
                        syriaca-computed-start="0426-01-01">
                        <precision match="@from" notAfter="0426" syriaca-computed-end="0426-01-01"/>
                        <precision match="@to" notBefore="2013" syriaca-computed-start="2013-01-01"
                        />
                    </state>
