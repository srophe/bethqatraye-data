         <listPlace>
            <place xml:id="place-2994" type="region">
               <placeName xml:id="name2994-1" xml:lang="en" syriaca-tags="#syriaca-headword"
                  >Qūmis</placeName>
               <placeName xml:id="name2994-2" xml:lang="ar" syriaca-tags="#syriaca-headword"
                  source="#bib2994-2 #bib2994-3 #">قومس</placeName>
               <placeName xml:lang="en" xml:id="name2994-3">Komisene</placeName>
               <placeName xml:lang="en" xml:id="name2994-4">Komish</placeName>
               <desc type="abstract" xml:lang="en" xml:id="abstract2994-1">A region between <placeName
                     ref="http://syriaca.org/place/2970">al-Ray</placeName> and <placeName
                     ref="http://syriaca.org/place/2997">Naysābūr</placeName>, around <placeName
                     ref="http://syriaca.org/place/2995">al-Dāmaghān</placeName>
               </desc>
               <desc xml:lang="en" >“[A] small province of
                  mediaeval Islamic Persia, lying to the south of the Alburz chain <choice><corr>watershed</corr><sic>watershd</sic></choice> and
                  extending into the northern fringes of the Das̲h̲t-i Kavīr.” (C.E.
                  Bosworth)</desc>
               <desc xml:lang="ar">
                  <quote source="#bib2994-3">طبران مدينة على تخوم قومس ورستاق سرخس</quote>
               </desc>
               <location type="gps" source="#bib2994-1">
                  <geo>35.9610935 54.0382895</geo>
               </location>
               <event type="attestation" xml:id="attestation2994-1" when="0891" source="#bib2994-2">
                  <p xml:lang="en">Attestation of name <foreign xml:lang="ar">قومس</foreign> in the
                        <title xml:lang="en" level="m">Kitāb al-buldān</title> of <persName>Aḥmad
                        ibn Abī Yaʿqūb al-Yaʿqūbī</persName>.</p>
                  <link target="#name2994-2 #attestation2994-1"/>
               </event>
