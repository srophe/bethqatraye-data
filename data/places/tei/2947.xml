         <listPlace>
            <place xml:id="place-2947" type="settlement">
               <placeName xml:id="name2947-1" xml:lang="en" syriaca-tags="#syriaca-headword"
                  >Kābul</placeName>
               <placeName xml:id="name2947-2" xml:lang="ar" syriaca-tags="#syriaca-headword"
                  source="#bib2947-2 #bib2947-3">كابل</placeName>
               <desc type="abstract" xml:lang="en" xml:id="abstract2947-1">A city between <placeName
                     ref="http://syriaca.org/place/500">India</placeName> and <placeName
                     ref="http://syriaca.org/place/409">Sijistān</placeName>.
               </desc>
               <desc xml:lang="en">A city in the district (kūra)
                  of <placeName>Ghaznīn</placeName>.</desc>
               <desc xml:lang="ar">
                  <quote source="#bib2947-3">واما غزنين فانها كورة جليلة وهى اسم القصبة ايضا ومن
                     مدنها كرديس، سكاوند، نوه بردن، دمراخى، حش بارى، فرمل، سرهون، لجرا، خواست، زاوه،
                     كاويل، كابل، لمغان، بودن، لهوكر، وناحية الشتان ولها ست منابر ابشين، اسبيجه،
                     مستنك، شال، سكيرة، سيوه والف ومائة قرية وللكورة الفان ومائتا قرية.</quote>
               </desc>
               <location type="gps" source="#bib2947-1">
                  <geo>34.521818 69.18024</geo>
               </location>
               <event type="attestation" xml:id="attestation2947-1" notBefore="0902" notAfter="0914"
                  source="#bib2947-2">
                  <p xml:lang="en">Attestation of name <foreign xml:lang="ar">كابل</foreign> in the
                        <title xml:lang="en" level="m">Kitāb al-aʿlāq al-nafīsa</title> of
                        <persName>Aḥmad ibn ʿUmar Ibn Rustah</persName>.</p>
                  <link target="#name2947-2 #attestation2947-1"/>
               </event>
               <state type="existence" from="-0100" to="2017">
                  <precision match="@from" notAfter="-0100"/>
                  <precision match="@to" notBefore="2017"/>
               </state>
